<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Discount Calculator</title>
<style>
  table {
    border-collapse: collapse;
    width: 400px;
    margin: 20px auto;
  }
  td, th {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
  }
  input[type="number"] {
    width: 90%;
    padding: 5px;
    font-size: 1rem;
  }
  input[readonly] {
    background-color: #eee;
  }
</style>
</head>
<body>

<table>
  <tr>
    <td><input type="number" id="price" placeholder="Price" min="0" step="0.01" /></td>
    <td><input type="number" id="discount" placeholder="Discount %" min="0" max="100" step="0.01" /></td>
    <td><input type="number" id="result" placeholder="Discount Amount" readonly /></td>
  </tr>
</table>

<script>
  const priceInput = document.getElementById('price');
  const discountInput = document.getElementById('discount');
  const resultInput = document.getElementById('result');

  function calculateDiscount() {
    const price = parseFloat(priceInput.value) || 0;
    const discountPercent = parseFloat(discountInput.value) || 0;

    const discountAmount = (price * discountPercent) / 100;
    resultInput.value = discountAmount.toFixed(2);
  }

  priceInput.addEventListener('input', calculateDiscount);
  discountInput.addEventListener('input', calculateDiscount);
</script>

</body>
</html>
